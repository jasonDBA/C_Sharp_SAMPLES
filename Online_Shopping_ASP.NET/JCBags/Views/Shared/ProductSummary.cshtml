@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <br /><small>@Model.Color</small>
            <span style="float:right">
                <small style="color:darkcyan; font-weight:bold; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                    @Model.Price.ToString("c")
                </small>
            </span>
        </h4>
    </div>


    <form id="@Model.ProductID" asp-action="AddToCart"
          asp-controller="Cart" method="post">
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Description
            <br /><small>#@Model.StyleNum</small>
            <button type="submit"
                    class="btn btn-success btn-sm pull-right" style="float:right; padding:10px; margin-top:5px;">
                Add To Cart
            </button>
        </span>
    </form>
</div>
